<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.spot.android.animatorchain.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SimpleChainActivity"
            android:label="@string/simple_chain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CircularChainActivity"
            android:label="@string/circular_chain" />
        <activity
            android:name=".DynamicChainActivity"
            android:label="@string/dynamic_chain" />
    </application>

</manifest>
